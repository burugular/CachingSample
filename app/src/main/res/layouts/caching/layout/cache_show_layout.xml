<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This fragment will show the Cache results"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/et_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cache results"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/loadInternalCache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Load from Internal cache"/>

    <Button
        android:id="@+id/loadExternalCache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Load from External cache"/>

    <Button
        android:id="@+id/loadPrivateExternalFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Load from External private"/>

    <Button
        android:id="@+id/loadPublicExternalFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Load from External public"/>

    <Button
        android:id="@+id/goToCacheSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go to Cache save"
        android:background="@color/colorPrimary"/>
</LinearLayout>